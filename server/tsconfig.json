{
  "compilerOptions": {
    "target": "es2018",
    "outDir": "dist",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "lib": ["esnext"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"]
}
